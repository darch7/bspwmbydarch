; Bar 1 ---------------------------------------------------------------
[bar/bar1]
;monitor = ${env:MONITOR:HDMI-A-2}
width = 97.7%
height = 22
offset-x = 1%
offset-y = 0.8%
radius = 0
fixed-center = true
font-0 = fixed:pixelsize=11.2;2
font-1 = "Font Awesome 5 Free:style=Solid:size=11;2"
font-2 = "Font Awesome:style=Solid:size=11"
font-3 = "Source Han Sans JP:Bold:size=12;2"
font-4 = "Iosevka Nerd Font:style=Medium:size=13;3"
background = ${colors.background-alt}
foreground = ${colors.foreground}
line-size = 3
line-color = #f00
border-size = 0
border-color = 
padding-left = 2
padding-right = 2
module-margin-left = 0
module-margin-right = 0
enable-ipc = true
modules-left = flechaizq izq usuario der arribacierra2 
modules-center = arribaabre izq bspwm der arribacierra
modules-right = arribaabre2 izq hora slash fecha der guion izq battery wifi der flechader
wm-restack = bspwm
cursor-click = pointer
cursor-scroll = ns-resize

;Barra Abajo 2 ---------------------------------------------------------------------

[bar/bar2]
;monitor = ${env:MONITOR:HDMI-A-2}
bottom = true
width = 97.7%
height = 22
offset-x = 1%
offset-y = 0.8%
radius = 0
fixed-center = true
font-0 = fixed:pixelsize=11.2;2
font-1 = "Font Awesome 5 Free:style=Solid:size=11;2"
font-2 = "Font Awesome:style=Solid:size=11"
font-3 = "Source Han Sans JP:Bold:size=12;2"
font-4 = "Iosevka Nerd Font:style=Medium:size=13;3"
background = ${colors.background-alt}
foreground = ${colors.foreground}
line-size = 3
line-color = #f00
padding-left = 2
padding-right = 2
module-margin-left = 0
module-margin-right = 0
enable-ipc = true
modules-left = izq logotitulo der xwindow
modules-center = abajoabre izq lluvia frio calor ram cpu temperature xbacklight pulseaudio der abajocierra
modules-right = abajoabre izq network-trafico der flechader 
wm-restack = bspwm
cursor-click = pointer
cursor-scroll = ns-resize

border=true
border-modules-center-size = 1.5
border-modules-center-color = ${colors.color10}

;--------------------------------------------------------------------------------

[module/xwindow]
type = internal/xwindow
label = " %title:0:30:...%"
label-foreground = ${colors.color2}
format-foreground = ${colors.color2}

[module/bspwm]
type = internal/bspwm
label-focused = %name%
label-focused-foreground = ${colors.color5}
label-focused-underline= ${colors.color5}
label-focused-padding = 1
label-occupied = %name%
label-occupied-foreground = ${colors.color3}
label-occupied-padding = 1
label-urgent = %name%
label-urgent-foreground = ${colors.color2}
label-urgent-padding = 1
label-empty = %name%
label-empty-foreground = ${colors.color0}
label-empty-padding = 1
label-focused-background = ${colors.background}
label-focused-underline-background = ${colors.background}
label-occupied-background = ${colors.background}
label-urgent-background = ${colors.background}
label-empty-background = ${colors.background}

[module/xbacklight]
type = internal/xbacklight
format ="|  <label> <%percentage%%> "
label = %percentage%%
label-foreground = ${colors.color6}
format-foreground = ${colors.color6}
format-background = ${colors.background}

[module/backlight-acpi]
inherit = module/xbacklight
type = internal/backlight
card = intel_backlight
format-background = ${colors.background}

[module/pulseaudio]
type = internal/pulseaudio
format-volume = "|  <label-volume>"
format-muted = "|  <label-muted>"
label-volume = %percentage%%
label-muted = %percentage%%
label-volume-foreground = ${colors.color13}
label-muted-foreground = ${colors.color9}
format-volume-foreground = ${colors.color13}
format-muted-foreground = ${colors.color9}
format-volume-background = ${colors.background}
format-muted-background = ${colors.background}

[module/battery]
type = internal/battery
full-at = 100
battery = BAT0
adapter = AC
poll-interval = 5
time-format = %H:%M
 
format-charging = <animation-charging><label-charging>    
format-discharging = <ramp-capacity><label-discharging>  

label-charging = " %percentage%%  "
label-charging-foreground = ${colors.color13}
label-discharging = " %percentage%%  "
label-discharging-foreground = ${colors.color13}
label-charging-background = ${colors.background}
label-discharging-background  = ${colors.background}
format-charging-background  = ${colors.background}
format-discharging-background  = ${colors.background}

label-full = 

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 
ramp-capacity-foreground = ${colors.color13}

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-framerate = 600
animation-charging-foreground = ${colors.color13}
animation-charging-background = ${colors.background}

animation-discharging-0= 
animation-discharging-1= 
animation-discharging-2= 
animation-discharging-3= 
animation-discharging-4= 
animation-discharging-framerate = 500
animation-discharging-foreground = ${colors.color13}
format-background = ${colors.background}

[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 60
format = "<ramp> <label> " 
format-warn = "<ramp> <label-warn> "
label =%temperature%
label-warn = %temperature%
ramp-0 =|  
ramp-1 =|  
ramp-2 =|  
label-foreground = ${colors.color13}
format-foreground = ${colors.color13}
format-warn-foreground = ${colors.color1}
format-background = ${colors.background}
format-warn-background = ${colors.background}

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over
;pseudo-transparency = false

[global/wm]
margin-top = 5
margin-bottom = 0

[module/wifi]
type = custom/script
exec = bar_wifi 2>/dev/null
format = "  <label>"
click-left = st -e nmtui
label = %output% 
label-padding = 0
tail = true
interval = 20
label-foreground = ${colors.color6}
format-foreground = ${colors.color6}
format-background = ${colors.background}

[module/network-trafico]
type = custom/script
exec = ~/.local/bin/modulos/bar_network_trafico
tail = true
label-foreground = ${colors.color6}
format-foreground = ${colors.color6}
format-background = ${colors.background}


